// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Team {
  id    String @id @default(uuid())
  name  String
  city  String
  couch String

  @@map("teams")
}

model Player {
  id      String @id @default(uuid())
  name    String
  cpf     String
  rg      String
  address String

  @@map("players")
}
